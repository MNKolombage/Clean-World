  <!-- Leaflet JS -->
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script>
    // Initializing the map
    var map = L.map('map').setView([7.8731, 80.7718], 7); // Set to Sri Lanka's coordinates (default)

    // Adding OpenStreetMap tile layer
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: 'Â© OpenStreetMap contributors'
    }).addTo(map);

    // Placeholder data for past and upcoming campaigns
    var campaignData = [
      { type: 'past', location: [6.9271, 79.8612], description: 'Colombo Cleanup Campaign', date: 'March 1, 2024' },
      { type: 'upcoming', location: [6.0535, 80.2210], description: 'Galle Beach Cleanup', date: 'April 10, 2024' },
      { type: 'upcoming', location: [7.2906, 80.6337], description: 'Kandy Park Cleanup', date: 'May 5, 2024' }
    ];

    // Function to add markers to the map
    campaignData.forEach(function (campaign) {
      var markerColor = campaign.type === 'past' ? 'blue' : 'green';
      var marker = L.circleMarker(campaign.location, {
        color: markerColor,
        radius: 8
      }).addTo(map);

      marker.bindPopup(`
        <strong>${campaign.description}</strong><br>
        <em>${campaign.type.charAt(0).toUpperCase() + campaign.type.slice(1)} Campaign</em><br>
        <strong>Date:</strong> ${campaign.date}
      `);
    });

  </script>
